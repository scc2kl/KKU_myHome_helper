<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/mb_list_item_roomHelp_mImage_image_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="20"
        android:src="@drawable/ic_menu_manage"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/mb_list_item_roomHelp_textset_linearLayout"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mb_list_item_roomHelp_title_Text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:text="TITLE"
            android:textSize="20dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/mb_list_item_roomHelp_position_Text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="POSISION/POSISION/POSISION"
            android:textSize="15dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/mb_list_item_roomHelp_exp_Text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:text="EXP : EXPCONTENT"
            android:textSize="15dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/mb_list_item_roomHelp_folder_image_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="10"
        android:src="@android:drawable/arrow_down_float"
        android:padding="7dp"/>
</LinearLayout>